from airflow.decorators import dag
from airflow.operators.bash_operator import BashOperator
from datetime import datetime, timedelta

default_args = {
    'owner': 'airflow',
    'depends_on_past': False,
    'email_on_failure': False,
    'email_on_retry': False,
    'retries': 1,
    'retry_delay': timedelta(minutes=5),
}

@dag(
    'dbt_daily_run',
    default_args=default_args,
    description='Run dbt models for Jaffle Shop',
    schedule_interval=timedelta(days=1),
    start_date=datetime(2024, 3, 29),
    catchup=False,
)
def dbt_daily_run():

    run_customer_models = BashOperator(
        task_id='run_customer_models',
        bash_command='dbt run --models tag:customer',
    )

    run_order_models = BashOperator(
        task_id='run_order_models',
        bash_command='dbt run --models tag:order',
    )

    run_product_models = BashOperator(
        task_id='run_product_models',
        bash_command='dbt run --models tag:product',
    )

    run_customer_models >> run_order_models >> run_product_models

dbt_dag = dbt_daily_run()
